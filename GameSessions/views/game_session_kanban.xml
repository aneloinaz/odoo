        <field name="model">game.session</field>
        <field name="arch" type="xml">

            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">

                            <!-- Avatar del jugador -->
                            <div class="o_kanban_image">
